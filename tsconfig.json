{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "stripInternal": true,
    "noUnusedLocals": false,
    "strict": true,
    "target": "es2020",
    "module": "esnext",
    "newLine": "lf",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./lib"
  },
  "include": ["src/*.ts"]
}
